{
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "// Windows": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File \"%USERPROFILE%\\.claude\\hooks\\notify_attention.ps1\"",
            "// Linux/macOS": "dash $HOME/.claude/hooks/notify_attention.sh",
            "command": "dash $HOME/.claude/hooks/notify_attention.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "// Windows": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File \"%USERPROFILE%\\.claude\\hooks\\notify_attention.ps1\"",
            "// Linux/macOS": "dash $HOME/.claude/hooks/notify_attention.sh",
            "command": "dash $HOME/.claude/hooks/notify_attention.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "// Windows": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File \"%USERPROFILE%\\.claude\\hooks\\notify_done.ps1\"",
            "// Linux/macOS": "dash $HOME/.claude/hooks/notify_done.sh",
            "command": "dash $HOME/.claude/hooks/notify_done.sh"
          }
        ]
      }
    ]
  }
}